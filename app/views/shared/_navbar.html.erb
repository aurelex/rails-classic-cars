<div class="navbar-wagon">
  <!-- Logo -->
  <a href="/" class="navbar-wagon-brand">
    <%= image_tag("logo.png", :alt => "Vavavoom Logo") %>
  </a>

  <!--  Search Button -->



  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">

    <%= link_to "All Cars", root_path(:anchor => "container2"), class: "navbar-wagon-item navbar-wagon-link"%>

    <% if current_user == nil %>
      <%= link_to "Sign Up", new_user_registration_path(current_user), class: "navbar-wagon-item navbar-wagon-link"%>
      <%= link_to "Sign In", new_user_session_path(current_user), class: "navbar-wagon-item navbar-wagon-link"%>
    <% else %>
      <%= link_to "Add a new car", new_car_path, class: "navbar-wagon-item navbar-wagon-link"%>
    <% end %>

    <!-- Profile picture with dropdown list -->
    <% if current_user != nil %>
      <div class="navbar-wagon-item">
        <div class="dropdown">
            <img src=<%="https://kitt.lewagon.com/placeholder/users/#{current_user.github_username}"%> class="avatar dropdown-toggle" id="navbar-wagon-menu" data-toggle="dropdown">
            <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
            <li><%= link_to "Dashboard", user_path(current_user) %></li>
            <li><%= link_to "Log Out", destroy_user_session_path(current_user), method: :delete%></li>
          </ul>
        </div>
      </div>
    <% end  %>
 </div>
</div>

